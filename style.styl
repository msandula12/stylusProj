projFontFamily = "Arial"
projFontColor = white

border-radius(radius)
	-webkit-border-radius radius
	border-radius radius


body 
	background-color #990000
	padding 20px

h1
	font-family projFontFamily
	font-size 3em
	color projFontColor
	text-shadow: 0px 0px 10px black
	text-align center

.newTemp
	font-size 2em

div
	width 90%
	height 100%
	margin auto
	padding 20px
	background-color lighten(#990000, 10%)
	border-radius(20px)
	box-shadow: 3px 3px 15px black

input, button
	box-sizing border-box
	display block
	margin 20px auto
	width 55%
	height 40px
	padding 10px
	border-radius(5px)

input
	font-family projFontFamily
	font-size 1em

button
	background-color complement(#990000)
	font-family projFontFamily
	color projFontColor
	font-size 1.2em

button:hover
	cursor pointer
	background-color lighten(#990000, 10%)

button:active
	background-color black